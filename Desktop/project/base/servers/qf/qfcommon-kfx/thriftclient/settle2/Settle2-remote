uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = Settle2.Client(protocol)
transport.open()

if cmd == 'create_bat':
  if len(args) != 2:
    print 'create_bat requires 2 args'
    sys.exit(1)
  pp.pprint(client.create_bat(eval(args[0]),args[1],))

elif cmd == 'settle':
  if len(args) != 1:
    print 'settle requires 1 args'
    sys.exit(1)
  pp.pprint(client.settle(eval(args[0]),))

elif cmd == 'audit_pass':
  if len(args) != 1:
    print 'audit_pass requires 1 args'
    sys.exit(1)
  pp.pprint(client.audit_pass(eval(args[0]),))

elif cmd == 'audit_refuse':
  if len(args) != 1:
